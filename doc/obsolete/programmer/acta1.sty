    \setbox\@tempboxa=\hbox{#2}\ifdim\wd\@tempboxa>10pt
    \uppercase{#2}: \fi{\it#3\/} \ignorespaces#4
    \edef\@tmp{#1}\ifx\@tmp\empty\else
    \if@filesw\immediate\write\@auxout
    {\string\bibcite{#1}{\thebibitem}}\fi\fi}

